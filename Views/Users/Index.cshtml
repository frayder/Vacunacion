@{
    ViewBag.Title = "Gestión de Usuarios";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

@model IEnumerable<Highdmin.Models.User>



<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-header border-bottom card-tabs d-flex flex-wrap align-items-center gap-2">
                <div class="flex-grow-1">
                    <h4 class="page-title">Usuarios</h4>
                </div>
                <div class="d-flex flex-wrap flex-lg-nowrap gap-2">
                    <a href="@Url.Action("Create", "Users")" class="btn btn-primary">
                        <i class="ri-add-line me-1"></i> Nuevo Usuario
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-centered mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Nombre de Usuario</th>
                                <th>Email</th>
                                <th>Rol</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.UserId</td>
                                    <td>@usuario.UserName</td>
                                    <td>@usuario.Email</td>
                                    <td>@(usuario.UserRoles?.FirstOrDefault()?.Role?.Nombre ?? "Sin rol")</td>
                                    <td>
                                        <span class="badge bg-success">Activo</span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Users", new { id = usuario.UserId })"
                                            class="btn btn-sm btn-outline-primary me-1">
                                            <i class="ri-edit-line"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@usuario.UserId" data-nombre="@usuario.UserName" data-email="@usuario.Email" data-rol="@(usuario.UserRoles?.FirstOrDefault()?.Role?.Nombre ?? "Sin rol")">
                                            <i class="ri-delete-bin-line"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Eliminar Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar este usuario?</p>
                <dl class="row">
                    <dt class="col-sm-4">Nombre de Usuario:</dt>
                    <dd class="col-sm-8" id="modal-nombre"></dd>
                    <dt class="col-sm-4">Email:</dt>
                    <dd class="col-sm-8" id="modal-email"></dd>
                    <dt class="col-sm-4">Nombre Completo:</dt>
                    <dd class="col-sm-8" id="modal-completo"></dd>
                    <dt class="col-sm-4">Rol:</dt>
                    <dd class="col-sm-8" id="modal-rol"></dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <form id="deleteForm" asp-action="Delete" asp-controller="Users" method="post" style="display: inline;">
                    <input type="hidden" id="deleteId" name="id" />
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $('#deleteModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var nombre = button.data('nombre');
            var email = button.data('email');
            var completo = button.data('completo');
            var rol = button.data('rol');

            var modal = $(this);
            modal.find('#modal-nombre').text(nombre);
            modal.find('#modal-email').text(email);
            modal.find('#modal-completo').text(completo);
            modal.find('#modal-rol').text(rol);
            modal.find('#deleteId').val(id);
        });
    </script>
}