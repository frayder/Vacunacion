@model Highdmin.ViewComponents.GradientCardViewModel

<div class="card mb-4" style="background: linear-gradient(135deg, @Model.StartColor 0%, @Model.EndColor 100%); color: white;">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <div class="avatar-sm">
                    <span class="avatar-title bg-white bg-opacity-20 text-white rounded-circle fs-3">
                        <i class="@Model.Icon"></i>
                    </span>
                </div>
            </div>
            <div class="flex-grow-1 ms-3">
                <h5 class="mb-1 text-white">@Model.Title</h5>
                <p class="text-white-50 mb-0">@Model.Description</p>
            </div>
        </div>
    </div>
</div>