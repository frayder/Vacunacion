@model Highdmin.ViewComponents.DeleteModalOptions

<!-- Modal para Eliminar -->
<div class="modal fade zoomIn" id="@Model.ModalId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="btn-close"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="@Model.IconUrl" trigger="loop" colors="@Model.IconColors" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>@Model.Title</h4>
                        <p class="text-muted mx-4 mb-0">@Model.Message</p>
                        @if (Model.ShowRecordText)
                        {
                            <p class="text-muted mx-4 mb-0" id="@Model.RecordTextId"></p>
                        }
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="@Model.CancelButtonClass" data-bs-dismiss="modal">@Model.CancelButtonText</button>
                    <form id="@Model.FormId" method="post" style="display: inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="@Model.ConfirmButtonClass">@Model.ConfirmButtonText</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>