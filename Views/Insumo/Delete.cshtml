@model InsumoItemViewModel
@{
    ViewData["Title"] = "Eliminar Insumo";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Eliminar Insumo</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Insumos</a></li>
                    <li class="breadcrumb-item active">Eliminar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-danger-subtle">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm">
                            <span class="avatar-title bg-danger-subtle text-danger rounded-circle fs-5">
                                <i class="ri-delete-bin-line"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-1 text-danger">Confirmar Eliminación</h5>
                        <p class="text-muted mb-0">¿Está seguro que desea eliminar este insumo?</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="ri-alert-line me-2"></i>
                    <strong>¡Advertencia!</strong> Esta acción no se puede deshacer. Se eliminará permanentemente el insumo del sistema.
                </div>

                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="ps-0" scope="row">Código:</th>
                                <td class="text-muted">@Model.Codigo</td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Nombre:</th>
                                <td class="text-muted">@Model.Nombre</td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Tipo:</th>
                                <td><span class="@Model.TipoBadgeClass">@Model.Tipo</span></td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Descripción:</th>
                                <td class="text-muted">@(Model.Descripcion ?? "No especificada")</td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Rango/Dosis:</th>
                                <td class="text-muted">@(Model.RangoDosis ?? "No especificado")</td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Estado:</th>
                                <td><span class="@Model.EstadoClass">@Model.EstadoTexto</span></td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Fecha de Creación:</th>
                                <td class="text-muted">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="text-end mt-4">
                    <a href="@Url.Action("Index")" class="btn btn-secondary me-2">
                        <i class="ri-arrow-left-line me-1"></i> Cancelar
                    </a>
                    <form asp-action="Delete" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">
                            <i class="ri-delete-bin-line me-1"></i> Confirmar Eliminación
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>