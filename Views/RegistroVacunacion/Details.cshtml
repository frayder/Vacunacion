@model RegistroVacunacionItemViewModel
@{
    ViewData["Title"] = "Detalle del Registro de Vacunación";
    ViewData["SubTitle"] = "Información completa del registro de vacunación";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

<!-- Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Highdmin</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Registro de Vacunación</a></li>
                    <li class="breadcrumb-item active">Detalle</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<!-- Header Card -->
<div class="card mb-4">
    <div class="card-body">
        <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
                <div class="avatar-lg">
                    <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-2">
                        <i class="ri-user-heart-line"></i>
                    </span>
                </div>
            </div>
            <div class="flex-grow-1 ms-3">
                <h4 class="mb-1">@Model.NombreCompleto</h4>
                <p class="text-muted mb-1"><strong>Documento:</strong> @Model.TipoDocumento - @Model.NumeroDocumento</p>
                <p class="text-muted mb-0"><strong>Consecutivo:</strong> @Model.Consecutivo</p>
            </div>
            <div class="flex-shrink-0">
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ri-arrow-left-line align-bottom me-1"></i> Volver
                    </a> 
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Status Card -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card card-animate">
            <div class="card-body text-center">
                <div class="avatar-sm mx-auto mb-3">
                    <span class="avatar-title bg-success-subtle text-success rounded-circle fs-3">
                        <i class="ri-calendar-check-line"></i>
                    </span>
                </div>
                <h6 class="mb-1">Fecha de Registro</h6>
                <p class="text-muted mb-0">@Model.FechaRegistro?.ToString("dd/MM/yyyy")</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-animate">
            <div class="card-body text-center">
                <div class="avatar-sm mx-auto mb-3">
                    <span class="avatar-title bg-info-subtle text-info rounded-circle fs-3">
                        <i class="ri-vaccine-line"></i>
                    </span>
                </div>
                <h6 class="mb-1">Vacuna Aplicada</h6>
                <p class="text-muted mb-0">@Model.Vacuna</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-animate">
            <div class="card-body text-center">
                <div class="avatar-sm mx-auto mb-3">
                    <span class="avatar-title bg-@(Model.IngresoPAIWEB == true ? "success" : "danger")-subtle text-@(Model.IngresoPAIWEB == true ? "success" : "danger") rounded-circle fs-3">
                        <i class="ri-database-2-line"></i>
                    </span>
                </div>
                <h6 class="mb-1">Ingreso PAIWEB</h6>
                <span class="badge bg-@(Model.IngresoPAIWEB == true ? "success" : "danger")-subtle text-@(Model.IngresoPAIWEB == true ? "success" : "danger")">
                    @(Model.IngresoPAIWEB == true ? "SÍ" : "NO")
                </span>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card card-animate">
            <div class="card-body text-center">
                <div class="avatar-sm mx-auto mb-3">
                    <span class="avatar-title bg-warning-subtle text-warning rounded-circle fs-3">
                        <i class="ri-shield-check-line"></i>
                    </span>
                </div>
                <h6 class="mb-1">Esquema</h6>
                <span class="badge bg-@(Model.EsquemaCompleto ? "success" : "warning")-subtle text-@(Model.EsquemaCompleto ? "success" : "warning")">
                    @(Model.EsquemaCompleto ? "Completo" : "Incompleto")
                </span>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Estilos personalizados para tabs mejorados */
        .nav-pills .nav-link {
            border-radius: 0.5rem;
            margin: 0 0.25rem;
            transition: all 0.3s ease;
            background: transparent;
            border: 2px solid transparent;
            color: #6c757d;
            font-weight: 500;
            min-height: 48px;
        }
        
        .nav-pills .nav-link:hover {
            background-color: rgba(13, 110, 253, 0.1);
            color: #0d6efd;
            border-color: rgba(13, 110, 253, 0.2);
            transform: translateY(-1px);
        }
        
        .nav-pills .nav-link.active {
            background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%);
            color: white;
            border-color: #0d6efd;
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
        }
        
        .nav-pills .nav-link i {
            font-size: 1.1rem;
        }
        
        .nav-border-top-primary .nav-link.active::before {
            content: '';
            position: absolute;
            top: -2px;
            left: 50%;
            transform: translateX(-50%);
            width: 60%;
            height: 3px;
            background: linear-gradient(90deg, transparent, #0d6efd, transparent);
            border-radius: 0 0 3px 3px;
        }
        
        .nav-border-top-primary .nav-link {
            position: relative;
        }
        
        .tab-content {
            animation: fadeIn 0.3s ease-in-out;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        
        /* Responsivo para móviles */
        @@media (max-width: 576px) {
            .nav-pills .nav-link {
                margin: 0.125rem;
                font-size: 0.875rem;
            }
        }
    </style>
}

