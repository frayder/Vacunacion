@model RegistroVacunacionItemViewModel

<div class="card border-0">
    <div class="card-header bg-warning text-dark">
        <h6 class="mb-0">
            <i class="ri-user-settings-line me-1"></i> Datos Complementarios
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Primera fila -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Sexo</label>
                    <div class="d-flex gap-3 mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Sexo" id="sexoHombre" value="HOMBRE">
                            <label class="form-check-label" for="sexoHombre">HOMBRE</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Sexo" id="sexoMujer" value="MUJER">
                            <label class="form-check-label" for="sexoMujer">MUJER</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Género</label>
                    <div class="d-flex gap-3 mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Genero" id="generoFemenino" value="FEMENINO">
                            <label class="form-check-label" for="generoFemenino">FEMENINO</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="Genero" id="generoMasculino" value="MASCULINO">
                            <label class="form-check-label" for="generoMasculino">MASCULINO</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Segunda fila -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Orientación sexual</label>
                    <select class="form-select">
                        <option value="">Seleccione</option>
                        <option value="HETEROSEXUAL">HETEROSEXUAL</option>
                        <option value="HOMOSEXUAL">HOMOSEXUAL</option>
                        <option value="INTERSEXUAL">INTERSEXUAL</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Edad gestacional (semanas)</label>
                    <input type="number" class="form-control" name="EdadGestacional" placeholder="Semanas">
                </div>
            </div>

            <!-- Tercera fila -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Peso del infante (kg)</label>
                    <input type="number" step="0.1" class="form-control" name="PesoInfante" placeholder="0.0">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">País de nacimiento</label>
                    <input type="text" class="form-control" name="PaisNacimiento" placeholder="Seleccione país">
                </div>
            </div>

            <!-- Datos de Residencia -->
            <div class="col-md-12">
                <h6 class="text-warning mb-3">
                    <i class="ri-home-line me-1"></i> Datos de Residencia
                </h6>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Departamento de residencia</label>
                    <input type="text" class="form-control" name="DepartamentoResidencia" placeholder="Seleccione departamento">
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Municipio de residencia</label>
                    <input type="text" class="form-control" name="MunicipioResidencia" placeholder="Seleccione municipio">
                </div>
            </div>

            <!-- Datos de Contacto -->
            <div class="col-md-12">
                <h6 class="text-primary mb-3">
                    <i class="ri-phone-line me-1"></i> Datos de Contacto
                </h6>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Indicativo + Teléfono fijo</label>
                    <div class="input-group">
                        <span class="input-group-text">+57</span>
                        <input type="text" class="form-control" name="TelefonoFijo" placeholder="1234567">
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" name="Email" placeholder="correo@ejemplo.com">
                </div>
            </div>
        </div>
    </div>
</div>