@model RegistroVacunacionItemViewModel

<div class="card border-0">
    <div class="card-header bg-info text-white">
        <h6 class="mb-0 text-white">
            <i class="ri-heart-pulse-line me-1"></i> Antecedentes Médicos
        </h6>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Pregunta 1 -->
            <div class="col-md-12">
                <div class="mb-4">
                    <label class="form-label fw-bold">¿Sufre o ha sufrido algún evento o enfermedad que contraindique la vacunación?</label>
                    <div class="d-flex gap-4 mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="EnfermedadContraindicacionVacuna" id="contraindicaSi" value="si">
                            <label class="form-check-label" for="contraindicaSi">SI</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="EnfermedadContraindicacionVacuna" id="contraindicaNo" value="no">
                            <label class="form-check-label" for="contraindicaNo">NO</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pregunta 2 -->
            <div class="col-md-12">
                <div class="mb-4">
                    <label class="form-label fw-bold">¿Ha presentado reacción moderada o severa a biológicos anteriores?</label>
                    <div class="d-flex gap-4 mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ReaccionBiologico" id="reaccionSi" value="si">
                            <label class="form-check-label" for="reaccionSi">SI</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="ReaccionBiologico" id="reaccionNo" value="no">
                            <label class="form-check-label" for="reaccionNo">NO</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Historial de Antecedentes -->
            <div class="col-md-12">
                <div class="card bg-light">
                    <div class="card-header bg-secondary text-white">
                        <h6 class="mb-0">
                            <i class="ri-file-list-3-line me-1"></i> Historial de Antecedentes
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <h6 class="text-primary mb-3">Agregar nuevo antecedente</h6>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Fecha de registro del antecedente <span class="text-danger">*</span></label>
                                        <input type="date" class="form-control" name="FechaRegistroAntecedente" required>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Tipo <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" name="TipoAntecedente" placeholder="Ej: Alergia, Enfermedad crónica, etc." required>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">Descripción <span class="text-danger">*</span></label>
                                        <textarea class="form-control" name="DescripcionAntecedente" rows="3" placeholder="Descripción detallada del antecedente..." required></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label class="form-label">Observaciones especiales</label>
                                        <textarea class="form-control" name="ObservacionesAntecedente" rows="2" placeholder="Observaciones especiales..."></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="button" class="btn btn-primary" id="agregarAntecedenteBtn">
                                        <i class="ri-add-line me-1"></i> Agregar Antecedente
                                    </button>
                                </div>
                            </div>
                        </div>

                        <!-- Lista de antecedentes agregados -->
                        <div id="listaAntecedentes" class="mt-4" style="display: none;">
                            <h6 class="text-success mb-3">Antecedentes registrados:</h6>
                            <div class="table-responsive">
                                <table class="table table-sm table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Fecha</th>
                                            <th>Tipo</th>
                                            <th>Descripción</th>
                                            <th>Observaciones</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="antecedentesTableBody">
                                        <!-- Los antecedentes se agregarán aquí dinámicamente -->
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>