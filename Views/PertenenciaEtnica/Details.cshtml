@model PertenenciaEtnicaItemViewModel
@{
    ViewData["Title"] = "Detalles de Pertenencia Étnica";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

<div class="page-title-box d-sm-flex align-items-center justify-content-between">
    <h4 class="mb-sm-0">Detalles de Pertenencia Étnica</h4>
    <div class="page-title-right">
        <ol class="breadcrumb m-0">
            <li class="breadcrumb-item"><a href="javascript: void(0);">Highdmin</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Pertenencia Étnica</a></li>
            <li class="breadcrumb-item active">Detalles</li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Información de la Pertenencia Étnica</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Código:</label>
                            <p class="text-muted">@Model.Codigo</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Nombre:</label>
                            <p class="text-muted">@Model.Nombre</p>
                        </div>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-semibold">Descripción:</label>
                    <p class="text-muted">@(string.IsNullOrEmpty(Model.Descripcion) ? "Sin descripción" : Model.Descripcion)</p>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Estado:</label>
                            <br>
                            <span class="@Model.EstadoClass">@Model.EstadoTexto</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Fecha de Creación:</label>
                            <p class="text-muted">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
                
                <div class="text-end">
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
                </div>
            </div>
        </div>
    </div>
</div>