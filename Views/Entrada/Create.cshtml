@model EntradaCreateViewModel
@{
    ViewData["Title"] = "Registrar Nueva Entrada";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">
                <i class="ri-medicine-bottle-line me-2"></i>Registrar Nueva Entrada
            </h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Entradas</a></li>
                    <li class="breadcrumb-item active">Nueva Entrada</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <p class="text-muted mb-4">Complete la información para registrar una nueva entrada de insumos biológicos</p>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm">
                            <span class="avatar-title bg-primary-subtle text-primary rounded-circle fs-5">
                                <i class="ri-file-add-line"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-1">Registrar Nueva Entrada</h5>
                        <p class="text-muted mb-0">Complete la información para crear un nuevo insumo</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="InsumoId" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.InsumoId)
                                </label>
                                <select asp-for="InsumoId" asp-items="Model.Insumos" class="form-control" data-choices data-choices-search-false>
                                </select>
                                <span asp-validation-for="InsumoId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FechaEntrada" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.FechaEntrada)
                                </label>
                                <input asp-for="FechaEntrada" class="form-control" type="date">
                                <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Cantidad" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.Cantidad)
                                </label>
                                <input asp-for="Cantidad" class="form-control" type="number" min="1" placeholder="0">
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UsuarioId" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.UsuarioId)
                                </label>
                                <select asp-for="UsuarioId" asp-items="Model.Usuarios" class="form-control" data-choices data-choices-search-false>
                                </select>
                                <span asp-validation-for="UsuarioId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mes" class="form-label">
                            <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.Mes)
                        </label>
                        <select asp-for="Mes" asp-items="Model.Meses" class="form-control" data-choices data-choices-search-false>
                        </select>
                        <span asp-validation-for="Mes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notas" class="form-label">@Html.DisplayNameFor(m => m.Notas)</label>
                        <textarea asp-for="Notas" class="form-control" rows="3" placeholder="Observaciones adicionales sobre esta entrada"></textarea>
                        <span asp-validation-for="Notas" class="text-danger"></span>
                    </div>

                    <div class="text-end">
                        <button type="button" class="btn btn-secondary me-2" onclick="cancelar()">
                            <i class="ri-close-line me-1"></i> Cancelar
                        </button>
                        <button type="submit" class="btn btn-primary">
                            <i class="ri-save-line me-1"></i> Registrar Entrada
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-information-line me-2"></i>Información
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info" role="alert">
                    <h6 class="alert-heading">
                        <i class="ri-lightbulb-line me-2"></i>Instrucciones
                    </h6>
                    <p class="mb-2">Para registrar una entrada correctamente:</p>
                    <ul class="mb-0">
                        <li>Seleccione el insumo biológico correspondiente</li>
                        <li>Verifique la fecha de entrada</li>
                        <li>Ingrese la cantidad exacta recibida</li>
                        <li>Confirme el usuario responsable</li>
                        <li>Seleccione el mes de registro</li>
                    </ul>
                </div>

                <div class="mt-3">
                    <h6 class="text-muted mb-3">Estado del Registro</h6>
                    <div class="form-check form-switch">
                        <input asp-for="Estado" class="form-check-input" type="checkbox" checked>
                        <label asp-for="Estado" class="form-check-label">
                            Entrada activa
                        </label>
                    </div>
                    <small class="text-muted">La entrada estará disponible para consultas y reportes</small>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="ri-timer-line me-2"></i>Información del Sistema
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="ps-0" scope="row">Fecha Actual:</th>
                                <td class="text-muted">@DateTime.Now.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Hora:</th>
                                <td class="text-muted">@DateTime.Now.ToString("HH:mm")</td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Mes Actual:</th>
                                <td class="text-muted">@DateTime.Now.ToString("MMMM yyyy")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        function cancelar() {
            if (confirm('¿Está seguro que desea cancelar? Se perderán todos los datos ingresados.')) {
                window.location.href = '@Url.Action("Index")';
            }
        }

        document.addEventListener('DOMContentLoaded', function() {
            // Set default month to current month
            var currentMonth = '@DateTime.Now.ToString("yyyy-MM")';
            var mesSelect = document.querySelector('select[name="Mes"]');
            if (mesSelect) {
                for (var i = 0; i < mesSelect.options.length; i++) {
                    if (mesSelect.options[i].value === currentMonth) {
                        mesSelect.selectedIndex = i;
                        break;
                    }
                }
            }

            // Form validation enhancement
            var form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function(e) {
                    var insumo = document.querySelector('select[name="InsumoId"]').value;
                    var cantidad = document.querySelector('input[name="Cantidad"]').value;
                    var usuario = document.querySelector('select[name="UsuarioId"]').value;
                    var mes = document.querySelector('select[name="Mes"]').value;

                    if (!insumo || !cantidad || !usuario || !mes) {
                        e.preventDefault();
                        alert('Por favor complete todos los campos obligatorios marcados con *');
                        return false;
                    }

                    if (parseInt(cantidad) <= 0) {
                        e.preventDefault();
                        alert('La cantidad debe ser mayor a 0');
                        return false;
                    }

                    // Confirm submission
                    if (!confirm('¿Está seguro que desea registrar esta entrada?')) {
                        e.preventDefault();
                        return false;
                    }
                });
            }
        });
    </script>
}