@model EntradaEditViewModel
@{
    ViewData["Title"] = "Editar Entrada";
    Layout = "~/Views/Shared/_VerticalLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Editar Entrada</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Entradas</a></li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title mb-0">Información de la Entrada</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden">
                    <input asp-for="FechaCreacion" type="hidden">
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="InsumoId" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.InsumoId)
                                </label>
                                <select asp-for="InsumoId" asp-items="Model.Insumos" class="form-control" data-choices data-choices-search-false>
                                </select>
                                <span asp-validation-for="InsumoId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FechaEntrada" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.FechaEntrada)
                                </label>
                                <input asp-for="FechaEntrada" class="form-control" type="date">
                                <span asp-validation-for="FechaEntrada" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Cantidad" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.Cantidad)
                                </label>
                                <input asp-for="Cantidad" class="form-control" type="number" min="1">
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="UsuarioId" class="form-label">
                                    <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.UsuarioId)
                                </label>
                                <select asp-for="UsuarioId" asp-items="Model.Usuarios" class="form-control" data-choices data-choices-search-false>
                                </select>
                                <span asp-validation-for="UsuarioId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Mes" class="form-label">
                            <span class="text-danger">*</span> @Html.DisplayNameFor(m => m.Mes)
                        </label>
                        <select asp-for="Mes" asp-items="Model.Meses" class="form-control" data-choices data-choices-search-false>
                        </select>
                        <span asp-validation-for="Mes" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Notas" class="form-label">@Html.DisplayNameFor(m => m.Notas)</label>
                        <textarea asp-for="Notas" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Notas" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Estado" class="form-check-input" type="checkbox">
                            <label asp-for="Estado" class="form-check-label"></label>
                        </div>
                    </div>

                    <div class="text-end">
                        <a href="@Url.Action("Index")" class="btn btn-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Actualizar Entrada</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Información del Registro</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-borderless mb-0">
                        <tbody>
                            <tr>
                                <th class="ps-0" scope="row">ID:</th>
                                <td class="text-muted">#@Model.Id.ToString("D6")</td>
                            </tr>
                            <tr>
                                <th class="ps-0" scope="row">Fecha Creación:</th>
                                <td class="text-muted">@Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}